# Production Environment Configuration
# Copy this file to .env.production for production deployments

# Firebase Configuration (Production)
VITE_FIREBASE_API_KEY=your-production-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-production-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-production-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-production-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:your-production-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-YOUR-PRODUCTION-MEASUREMENT-ID

# Production Settings
VITE_APP_NAME=EVStockMaster
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# API Configuration (Production)
VITE_API_BASE_URL=https://your-domain.com/api
VITE_STREAMLIT_URL=https://your-streamlit-app.com

# Database Configuration (Production)
DATABASE_URL=your-production-database-url
REDIS_URL=your-production-redis-url

# Email Configuration (Production)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-production-email-password

# Security Settings (Production)
SESSION_SECRET=your-strong-session-secret
JWT_SECRET=your-strong-jwt-secret

# Monitoring and Analytics (Production)
SENTRY_DSN=your-production-sentry-dsn
GOOGLE_ANALYTICS_ID=G-YOUR-PRODUCTION-GA-ID

# Performance Settings
VITE_BUILD_ANALYZE=false
VITE_COMPRESS_ASSETS=true
VITE_MINIFY=true